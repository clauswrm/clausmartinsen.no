{
  "name": "clausmartinsen.no",
  "version": "1.0.0",
  "description": "Personal Website",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist/*",
    "start": "parcel src/index.html --port 3000 --open",
    "build": "parcel build src/index.html --no-source-maps && node ./postbuild.js",
    "watch": "parcel watch src/index.html",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint src/**/*.{ts,tsx}",
    "format-check": "prettier --check src/**/*.{ts,tsx}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clauswrm/clausmartinsen.no.git"
  },
  "author": "Claus Martinsen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clauswrm/clausmartinsen.no/issues"
  },
  "homepage": "https://github.com/clauswrm/clausmartinsen.no#readme",
  "dependencies": {
    "firebase": "^7.14.4",
    "node-sass": "^7.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@types/jest": "^25.2.2",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "babel-jest": "^26.0.1",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "jest": "^26.0.1",
    "jest-transform-stub": "^2.0.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-html-root-syntax-all-links": "0.0.1",
    "parcel-plugin-static-files-copy": "^2.3.1",
    "parcel-plugin-sw-cache": "^0.3.1",
    "prettier": "^2.0.5",
    "ts-jest": "^25.5.1",
    "typescript": "^3.9.2"
  },
  "staticFiles": {
    "staticPath": "public",
    "watcherGlob": "**",
    "excludeGlob": [
      "ga",
      "ga/**"
    ]
  },
  "jest": {
    "coverageReporters": [
      "html"
    ]
  },
  "cache": {
    "clearDist": true
  }
}
